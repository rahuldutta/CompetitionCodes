#include <iostream>
#include <cstdio>
  #include <sstream>
  #include <cmath>
  using namespace std;
  
  const int maxn = 310;
  
  long long f[maxn][maxn][maxn];
  int a[3];
  
  void Calculate();
  
  int main()
  {
      Calculate();
      string line;
      int i;
      while (!cin.eof())
      {
          getline(cin,line);
          if (line == "") break;
  
          a[1] = -1; a[2] = -1;
          i = 0; a[i] = 0;
          for (unsigned int j=0; j<line.length(); j++)
          {
              if (line[j]==' ') a[++i] = 0;
              else a[i] = a[i]*10 + int(line[j]) - 48;
          }
  			//cout<<a[0]<<" "<<a[1]<<" "<<a[2]<<endl;
  			//cout<<f[a[0]][a[0]][a[2]]<<" "<<f[a[0]][a[0]][a[1]-1]<<endl;
          if (a[1]>300) a[1] = 300;
          if (a[2]>300) a[2] = 300;
      if (a[1]!=-1 && a[2]!=-1) cout << f[a[0]][a[0]][a[2]] - f[a[0]][a[0]][a[1]-1]<< endl;
         else if (a[1]!=-1) cout << f[a[0]][a[0]][a[1]] << endl;
       else cout << f[a[0]][a[0]][a[0]] << endl;
     }
     return 0;
 }
 
 void Calculate()
 {
     for (int j=0; j<maxn; j++)
         for (int k=0; k<=300; k++)
           f[0][j][k] = 1;
 
    for (int i=1; i<=300; i++)
          for (int j=1; j<=300; j++)
             for (int k=1; k<=300; k++)
                  if (j<=i) f[i][j][k] = f[i-j][j][k-1]+f[i][j-1][k];
                 else f[i][j][k] = f[i][j-1][k];
  }
